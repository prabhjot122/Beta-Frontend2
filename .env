# ========================================
# LawVriksh Frontend Environment Configuration
# ========================================

# Application Environment
NODE_ENV=production
VITE_APP_ENV=production

# ========================================
# Backend API Configuration
# ========================================



# API Base URL (constructed from above values)
VITE_API_BASE_URL=https://lawvriksh.com

# API Timeout (in milliseconds)
VITE_API_TIMEOUT=30000

# ========================================
# Database Configuration (for reference)
# ========================================


# Admin Credentials
VITE_ADMIN_USERNAME=admin
VITE_ADMIN_PASSWORD=admin123

# ========================================
# Application Configuration
# ========================================

# Application Metadata
VITE_APP_TITLE=LawVriksh Beta - Join the Legal Revolution
VITE_APP_DESCRIPTION=Join the LawVriksh Beta: Be the First to Experience the future of legal knowledge sharing. Know your rights. Show your insights.
VITE_APP_KEYWORDS=law, legal, beta, lawvriksh, legal platform, legal knowledge
VITE_APP_TAGLINE=Know your rights. Show your insights

# ========================================
# Feature Flags
# ========================================

# Enable/Disable Features
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_DEBUG_MODE=true
VITE_ENABLE_ADMIN_PANEL=true
VITE_ENABLE_FEEDBACK_SYSTEM=true

# ========================================
# Analytics & Tracking
# ========================================

# Google Analytics (if needed)
VITE_GA_TRACKING_ID=

# Other Analytics Services
VITE_ANALYTICS_ENABLED=false

# ========================================
# UI/UX Configuration
# ========================================

# Theme Configuration
VITE_DEFAULT_THEME=dark
VITE_ENABLE_THEME_SWITCHING=true

# Animation Settings
VITE_ENABLE_ANIMATIONS=true
VITE_ANIMATION_DURATION_FAST=150
VITE_ANIMATION_DURATION_NORMAL=200
VITE_ANIMATION_DURATION_SLOW=300

# ========================================
# Development Configuration
# ========================================

# Development Server
VITE_DEV_SERVER_PORT=5173
VITE_DEV_SERVER_HOST=localhost

# Hot Module Replacement
VITE_HMR_ENABLED=true

# Source Maps
VITE_GENERATE_SOURCEMAP=true

# ========================================
# Production Configuration
# ========================================

# Build Configuration
VITE_BUILD_OUTDIR=build
VITE_BUILD_ASSETSDIR=assets

# CDN Configuration (if using CDN)
VITE_CDN_URL=

# ========================================
# Error Handling & Logging
# ========================================

# Error Reporting
VITE_ENABLE_ERROR_REPORTING=true
VITE_ERROR_REPORTING_SERVICE=

# Logging Level (error, warn, info, debug)
VITE_LOG_LEVEL=info

# ========================================
# Performance & Optimization
# ========================================

# Caching
VITE_ENABLE_CACHING=true
VITE_CACHE_DURATION=3600

# Compression
VITE_ENABLE_COMPRESSION=true

# ========================================
# Local Storage Keys
# ========================================

VITE_STORAGE_PREFIX=lawvriksh_
VITE_ADMIN_TOKEN_KEY=lawvriksh_admin_token
VITE_USER_PREFERENCES_KEY=lawvriksh_user_preferences
VITE_FORM_DRAFTS_KEY=lawvriksh_form_drafts

# ========================================
# Asset Configuration
# ========================================

# Asset URLs (relative to public directory)
VITE_LOGO_URL=/logo.png
VITE_VIDEO_URL=/VIDEO.mp4
VITE_GOLD_TEXTURE_URL=/gold.jpg
VITE_GOLD2_TEXTURE_URL=/gold2.png
VITE_HERO_IMAGE_URL=/hero.png
VITE_BACKGROUND_IMAGE_URL=/LVbetaBg.png

# ========================================
# Email Configuration (if needed)
# ========================================

# SMTP Configuration
VITE_SMTP_HOST=
VITE_SMTP_PORT=
VITE_SMTP_USER=
VITE_SMTP_FROM_EMAIL=

# ========================================
# Social Media & External Services
# ========================================

# Social Media Links
VITE_FACEBOOK_URL=
VITE_TWITTER_URL=
VITE_LINKEDIN_URL=
VITE_INSTAGRAM_URL=

# External API Keys
VITE_GOOGLE_MAPS_API_KEY=
VITE_RECAPTCHA_SITE_KEY=

# ========================================
# Backup & Data Export
# ========================================

# Data Export Configuration
VITE_ENABLE_DATA_EXPORT=true
VITE_MAX_EXPORT_RECORDS=10000

# ========================================
# Rate Limiting
# ========================================

# API Rate Limiting
VITE_API_RATE_LIMIT=100
VITE_API_RATE_WINDOW=3600

# ========================================
# Maintenance Mode
# ========================================

# Maintenance Configuration
VITE_MAINTENANCE_MODE=false
VITE_MAINTENANCE_MESSAGE=We are currently performing scheduled maintenance. Please check back soon.

# ========================================
# Custom Configuration
# ========================================

